<div class="container">
<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table class="table">
  <thead>
    <tr>
    <th colspan="1"></th>
        <th>Invoice number</th>
      <th>Invoice date</th>
      <th>Due date</th>
      <th>Member</th>
      </tr>
  </thead>
  <tbody>
   <% @invoices.each do |invoice| %>
        <tr>
          <td>
            <input type="checkbox">
          </td>
            <td><%= link_to invoice.invoice_number, edit_invoice_path(invoice.id) %></td>
            <td><%= invoice.invoice_date %></td>
            <td><%= invoice.due_date %></td>
            <td><%= invoice.member_id %></td>
          </tr>
      <% end %>
  </tbody>
</table>

 <%= link_to 'New Invoice', new_invoice_path, class: "button is-succes" %>
</div>
