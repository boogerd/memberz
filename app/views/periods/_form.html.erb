<%= form_with(model: period) do |form| %>
  <% if period.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul>
        <% period.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_date, class: "label" %>
    <div class="control">
      <%= form.date_field :start_date, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :end_date, class: "label" %>
    <div class="control">
      <%= form.date_field :end_date, class: "input" %>
    </div>
  </div>


  <div class="field">
    <%= form.label :status, class: "label" %>
    <div class="control">
      <%= form.text_field :status, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <div class="control">
      <%= form.text_field :description, class: "input" %>
    </div>
  </div>

 <div class="field is-grouped">
    <%= link_to "Back", periods_path, class: "button is-info mr-2" %>
    <%= form.submit class: 'button is-primary' %>  
  </div>
<% end %>
