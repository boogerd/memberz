<div class="container">
<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table">
  <thead>
    <tr>
    <th colspan="1"></th>
        <th>Number</th>
      <th>Description</th>
      <th>Account type</th>
      <th>Status</th>
      <th>Organisation</th>
      </tr>
  </thead>
  <tbody>
   <% @accounts.each do |account| %>
        <tr>
          <td>
            <input type="checkbox">
          </td>
            <td><%= link_to account.number, edit_account_path %></td>
            <td><%= account.description %></td>
            <td><%= account.account_type %></td>
            <td><%= account.status %></td>
            <td><%= account.organisation_id %></td>
          </tr>
      <% end %>
  </tbody>
</table>

 <%= link_to 'New Account', new_account_path, class: "button is-succes" %>
</div>
